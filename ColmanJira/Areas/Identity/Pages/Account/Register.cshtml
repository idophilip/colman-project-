@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="row" style="background-color: white;text-align:center; position: relative; width: 340px; margin: auto; padding: 30px; top: 90px; box-shadow: 1px 1px 8px 0px;">
    <img width="70" height="70" src="/avatar-login.png" style="background-color: #3f51b5;border-radius: 100%;position: absolute;top: 0;left: 134px;top: -46px;box-shadow: 1px -3px 8px 0;">
    <h3 style="width:100%;">@ViewData["Title"]</h3>
    <div class="col-md-12">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Register</button>
            </div>
            <div class="form-group" style="position:relative; top:5px;">
                <p>
                    <a style="font-weight: bold;" asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Already Registered? Login</a>
                </p>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
